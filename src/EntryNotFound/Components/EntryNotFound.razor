@using Avolutions.Baf.Blazor.EntryNotFound.Resources
@using Avolutions.Baf.Core.Resources
@using Microsoft.Extensions.Localization
@using MudBlazor

@inject IStringLocalizer<SharedResources> LShared
@inject IStringLocalizer<EntryNotFoundResources> L

<MudGrid Class="mt-4">
    <MudItem xs="12">
        <MudAlert Severity="Severity.Error">
            @L["Title"]
        </MudAlert>
    </MudItem>
    <MudItem xs="12" Class="d-flex justify-center">
        <MudButton Href="@BackUrl"
                   Color="Color.Primary"
                   Variant="Variant.Filled">
            @LShared["Button.Back"]
        </MudButton>
    </MudItem>
</MudGrid>

@code {
    [Parameter] public string BackUrl { get; set; } = "/";
}