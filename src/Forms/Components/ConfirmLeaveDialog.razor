@using Avolutions.Baf.Blazor.Forms.Resources
@using Avolutions.Baf.Core.Resources
@using Microsoft.Extensions.Localization
@using MudBlazor

@inject IStringLocalizer<FormResources> L
@inject IStringLocalizer<SharedResources> LShared

<MudDialog>
    <DialogContent>
        <MudText>@L["ConfirmLeaveDialog.Content"]</MudText>
        <MudText Class="mt-2">@L["ConfirmLeaveDialog.Question"]</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Default" OnClick="@Cancel">@LShared["Button.No"]</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="@Leave">@LShared["Button.Yes"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = null!;

    private void Cancel() => MudDialog.Cancel();
    private void Leave() => MudDialog.Close(DialogResult.Ok(true));
}